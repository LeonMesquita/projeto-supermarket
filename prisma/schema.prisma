generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product_types {
  id          Int        @id @default(autoincrement())
  name        String @unique
  picture_url String
  products    products[]
}

model carts {
  id             Int              @id @default(autoincrement())
  user_id        Int? @unique
  users          users?           @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  carts_products carts_products[]
}

model carts_products {
  id         Int       @id @default(autoincrement())
  product_id Int?
  cart_id    Int?
  amount     Int
  carts      carts?    @relation(fields: [cart_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  products   products? @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model products {
  id              Int              @id @default(autoincrement())
  name            String @unique
  price           Float            @db.Real
  barcode         String           @unique
  picture_url     String
  product_type_id Int?
  product_types   product_types?   @relation(fields: [product_type_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  carts_products  carts_products[]
}

model users {
  id           Int     @id @default(autoincrement())
  name         String
  email        String  @unique
  password     String
  phone_number String?
  address_id Int?
  address address[]
  carts carts[]

}

model streets {
  id           Int     @id @default(autoincrement())
  name         String @unique
  address address[]
}

model districts {
  id           Int     @id @default(autoincrement())
  name         String @unique
  address address[]
}




model address {
  id           Int     @id @default(autoincrement())
  street_id Int?
  district_id Int?
  number Int
  nickname String
  streets streets? @relation(fields: [street_id], references: [id])
  districts districts? @relation(fields: [district_id], references: [id])
  user_id Int?
  users users? @relation(fields: [user_id], references: [id])
}


